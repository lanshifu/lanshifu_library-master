<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="library.lanshifu.com.myapplication">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.AccessibilityService" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".comm.search.SearchActivity" />
        <activity android:name=".multList.MultListActivity" />
        <activity android:name=".ToolBarDemoActivity" />
        <activity android:name=".FlowTagDemoActivity" />
        <activity android:name=".popu.PopuDemoActivity" />
        <activity android:name=".fileprovider.FileProviderDemoActivity" />
        <activity android:name=".smartrefresh.SmartRefreshDemoActivity" />
        <activity android:name=".DropDownDemoActivity" />
        <activity android:name=".wifi.WifiPassWorldActivity" />
        <activity android:name=".PagerFragmentDemoActivity" />

        <service android:name=".window.WindowService" />
        <activity android:name=".contentprovider.ProviderActivity"/>
        <activity android:name=".voice.VoiceListActivity"/>


        <service
        android:name=".service.MyAccessServices"
        android:label="@string/accessibility_service_label"
        android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />

                <mate-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility" />
            </intent-filter>
        </service>


        <provider
            android:name=".contentprovider.UserInfoProvider"
            android:authorities="com.lanshifu.userinfo_provider" />

    </application>

</manifest>